pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'docker-hub-creds'
        DOCKER_IMAGE_SERVER = 'shirish3680/restuarant_genai_advicer-server'
        DOCKER_IMAGE_FRONTEND = 'shirish3680/restuarant_genai_advicer-frontend'
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Shiri-sh/restuarant_genAi_advicer.git'
                
            }
        }

        stage('Build Docker Images') {
            steps {
                echo "Building Docker images using Docker Compose..."
                sh "docker run --rm --privileged -v /var/run/docker.sock:/var/run/docker.sock -v ${env.WORKSPACE}:${env.WORKSPACE} -w ${env.WORKSPACE} docker/compose:1.29.2 -f ${env.WORKSPACE}/${DOCKER_COMPOSE_FILE} build"
            }
        }
        stage('Run Cypress Integration Tests') {
            steps {
                echo "Running Cypress end-to-end tests..."
                sh '''
                  cd cypress
                  npm install
                  npx cypress run
                '''
            }
        }

        stage('Push Docker Images') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKER_HUB_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    echo "Logging in to Docker Hub..."
                    sh "docker login -u ${DOCKER_USER} -p ${DOCKER_PASS}"
                    echo "Pushing server image..."
                    sh "docker push ${DOCKER_IMAGE_SERVER}"
                    echo "Pushing frontend image..."
                    sh "docker push ${DOCKER_IMAGE_FRONTEND}"
                }
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                echo "Deploying all services with Docker Compose..."
                sh "docker run --rm --privileged -v /var/run/docker.sock:/var/run/docker.sock -v ${env.WORKSPACE}:${env.WORKSPACE} -w ${env.WORKSPACE} docker/compose:1.29.2 -f ${env.WORKSPACE}/${DOCKER_COMPOSE_FILE} up -d"
            }
        }
    }

    post {
        always {
            echo "Cleaning up Docker images and containers..."
            sh "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v ${env.WORKSPACE}:${env.WORKSPACE} -w ${env.WORKSPACE} docker/compose:1.29.2 -f ${env.WORKSPACE}/${DOCKER_COMPOSE_FILE} down"
            echo "Pipeline finished."
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
